FROM golang:alpine

WORKDIR /app

# Install build dependencies including git and air for hot-reload
RUN apk add --no-cache gcc musl-dev sqlite-dev git
RUN go install github.com/air-verse/air@latest

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Run go mod tidy to ensure all dependencies are resolved
RUN go mod tidy

# Expose port
EXPOSE 8080

# Run with air for hot-reload
CMD ["air", "-c", ".air.toml"]
